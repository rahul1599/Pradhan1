<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profileactivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#157DCF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#157DCF">



        </LinearLayout>
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8"
            android:background="@drawable/topborders_curved">

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:text="name"/>

                <EditText
                    android:id="@+id/addproduct_name"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="5"
                    android:hint="name"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="2"
                    android:text="Initial qty"/>

                <EditText
                    android:id="@+id/addproduct_initial_qty"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="5"
                    android:hint="initial qty"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/submit_btn_addProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/curved_btn"
                android:text="Submit"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"/>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>